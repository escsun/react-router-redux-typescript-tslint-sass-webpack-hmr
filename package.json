{
  "name": "react-webpack-typescript-tslint-sass-hmr",
  "version": "1.0.0",
  "description": "Starter kit for React, Webpack, TypeScript, TsLint, Sass and Hot Module Replacment (HMR)",
  "main": "index.tsx",
  "author": "escsun <escsunarcher@gmail.com>",
  "license": "GPLv3",
  "scripts": {
    "start": "better-npm-run dev",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack-dev-server",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "webpack --display-chunks --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "@types/node": "^8.0.46",
    "@types/react": "^16.0.16",
    "@types/react-dom": "^16.0.2",
    "awesome-typescript-loader": "^3.2.3",
    "better-npm-run": "^0.1.0",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "tslint": "^5.8.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.3"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "react-hot-loader": "^3.1.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
